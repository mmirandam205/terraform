pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-2'
        INSTANCE_NAME = 'NombreFijoDesdeJenkinsfile'  // Aquí escribís directamente el nombre
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/mmirandam205/terraform.git'
            }
        }

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                sh "terraform plan -var=\"instance_name=${env.INSTANCE_NAME}\""
            }
        }

        stage('Terraform Apply') {
            steps {
                sh "terraform apply -var=\"instance_name=${env.INSTANCE_NAME}\" -auto-approve"
            }
        }
    }
}
